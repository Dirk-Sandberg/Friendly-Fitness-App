#:import utils kivy.utils
#:import F kivy.factory.Factory

<NicknamePopup@ModalView>:
    # ... do your stuff
    size_hint: .8, .3
    pos_hint: {"top": .65, "right": .9}
    FloatLayout:
        Label:
            text: "Set Nickname"
            size_hint: .8, .2
            pos_hint: {"top": .9, "right": .9}
        TextInput:
            hint_text: "Nickname"
            size_hint: .8, .2
            pos_hint: {"top": .6, "right": .9}
            id: nickname_field
        LabelButton:
            size_hint: .8, .2
            pos_hint: {"top": .3, "right": .9}
            text: "[u]Okay[/u]"
            markup: True
            on_release:
                app.set_friend_nickname(nickname_field.text)
                root.dismiss()

<FriendWorkoutScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#35477d")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            rows: 1
            padding: 0, 5
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .15
            Image:
                # Avatar image for your friend
                id: friend_workout_screen_image
            LabelButton:
                # Label for their friend ID
                id: friend_workout_screen_friend_id
                text: "[u]Nickname[/u]"
                markup: True
                on_release:
                    F.NicknamePopup().open()

            Label:
                # Streak label
                text: ""
                id: friend_streak_label
        ScrollView:
            pos_hint: {"top": .85, "left": 1}
            size_hint: 1, .65
            GridLayout:
                # Banner grid
                id: friend_banner_grid
                cols: 1
                spacing: 10,10
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_force_default: True


        LabelButton:
            text: "[u]Back[/u]"
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#35477d") if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: 1, .1
            pos_hint: {"top": .1, "right": 1}
            markup: True
            on_release:
                app.change_screen("friends_list_screen", direction='right', mode='pop')

