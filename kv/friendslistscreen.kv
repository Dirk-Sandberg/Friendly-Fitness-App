<FriendsListScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#39B3F2")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        ScrollView:
            size_hint: 1, 0.85
            pos_hint: {"top": 1, "left": 1}
            GridLayout:
                cols: 1
                id: friends_list_grid
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_force_default: True
                spacing: 2, 2 
                padding: 2, 2
        ImageButton:
            size_hint: .3, 0.15
            pos_hint: {"top": .15, "left": 1}
            source: "icons/back.png"
            on_release:
                app.change_screen("home_screen")

