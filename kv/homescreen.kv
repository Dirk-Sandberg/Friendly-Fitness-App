#:import utils kivy.utils


<HomeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#39B3F2")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            # Put two weather icons here
            rows: 1
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .1
            Image:
                source: "icons/002-sunrise.png"
            Image:
                source: "icons/001-sun.png"
        GridLayout:
            # Put two weather icons and avatar icon
            rows: 1
            pos_hint: {"top": .9, "left": 1}
            size_hint: 1, .2
            Image:
                source: "icons/003-sunset.png"
            Image:
                source: "icons/man.png"
                id: avatar_image
            Image:
                source: "icons/007-crescent-moon.png"
        Label:
            # Streak label
            pos_hint: {"top": .7, "left": 1}
            size_hint: 1, .1
            text: ""
            id: streak_label
        ScrollView:
            pos_hint: {"top": .6, "left": 1}
            size_hint: 1, .4
            GridLayout:
                # Banner grid
                id: banner_grid
                cols: 1
                spacing: 10,10
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_force_default: True
        GridLayout:
            # Add 3 Menu buttons here
            rows: 1
            pos_hint: {"top": .2, "left": 1}
            size_hint: 1, .2
            ImageButton:
                source: "icons/007-add-friend.png"
                on_release:
                    print("RELEASED ADD FRIEND BUTTON")
            ImageButton:
                source: "icons/football.png"
                on_release:
                    print("RELEASED FOOTBALL BUTTON")
            ImageButton:
                source: "icons/ice-hockey.png" if self.state=='normal' else "icons/boy.png"











