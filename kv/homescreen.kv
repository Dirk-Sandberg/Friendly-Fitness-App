#:import utils kivy.utils


<HomeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#35477d")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            # Streak label
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .1
            text: "0 Day Streak"
            id: streak_label
        ScrollView:
            pos_hint: {"top": .9, "left": 1}
            size_hint: 1, .8
            GridLayout:
                # Banner grid
                id: banner_grid
                cols: 1
                spacing: 5,5
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_force_default: True
        GridLayout:
            rows: 1
            size_hint: 1, .1
            pos_hint: {"top": .1, "right": 1}
            LabelButton:
                text: "[u]Settings[/u]"
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex("#35477d") if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                markup: True
                on_release:
                    app.change_screen("settings_screen", direction='right', mode='push')
            LabelButton:
                text: "[u]Friends List[/u]"
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex("#35477d") if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": .666}
                markup: True
                on_release:
                    app.change_screen("friends_list_screen", direction='up', mode='push')
            LabelButton:
                text: "[u]New Workout[/u]"
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex("#35477d") if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": 1}
                markup: True
                on_release:
                    app.change_screen("add_workout_screen")











