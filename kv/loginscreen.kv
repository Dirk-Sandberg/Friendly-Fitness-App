<LoginScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#35477d")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#35477d")
            Rectangle:
                size: self.size
                pos: self.pos
        TextInput:
            id: login_email
            hint_text: "email"
            size_hint: .8, .1
            pos_hint: {"top": .9, "right" :.9}
            on_text:
                self.focus = not self.focus if self.text.endswith("\n") else self.focus
                #self.text = self.text.replace("\n","")

        TextInput:
            id: login_password
            password: True
            hint_text: "password"
            size_hint: .8, .1
            pos_hint: {"top": .7, "right" :.9}
            on_text:
                self.focus = not self.focus if self.text.endswith("\n") else self.focus
                #self.text = self.text.replace("\n","")

        Label:
            id: login_message
            color: (1,0,0,1)
            size_hint: .8, .1
            pos_hint: {"top": .4, "right" :.9}
        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#35477d") if self.state == 'normal' else utils.get_color_from_hex("#3244AA")
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: "[u]Sign up / Sign in[/u]"
            markup: True
            size_hint: .8, .1
            pos_hint: {"top": .2, "right" :.9}
            on_release:
                #print(app.nicknames)
                login_message.text = ""
                app.my_firebase.sign_up(login_email.text, login_password.text)


