<ClickableGrid@ButtonBehavior+GridLayout>:
    rows: 1
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex("#35477d") if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
        Rectangle:
            size: self.size
            pos: self.pos


<SettingsScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#35477d")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#35477d")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            id: friend_id_label
            font_size: 40
            text: "My Friend ID: "
            size_hint: 1, .1
            pos_hint: {"top": 1, "left": 1}
        ClickableGrid:
            size_hint: .8, .1
            pos_hint: {"top": .8, "right": .9}
            on_release:
                app.change_screen("change_avatar_screen", direction='right', mode='push')
            Image:
                source: "icons/avatars/man.png"
            Label:
                text: "[u]Change Avatar[/u]"
                markup: True
        ClickableGrid:
            size_hint: .8, .1
            pos_hint: {"top": .6, "right": .9}
            on_release:
                app.change_screen("add_friend_screen", direction = 'right', mode='push')
            Image:
                source: "icons/007-add-friend.png"
            Label:
                text: "[u]Add A Friend[/u]"
                markup: True
        ClickableGrid:
            size_hint: .8, .1
            pos_hint: {"top": .4, "right": .9}
            on_release:
                app.sign_out_user()
            Image:
                source: "icons/sign_out.png"
            Label:
                text: "[u]Sign Out[/u]"
                markup: True


        LabelButton:
            text: "[u]Back[/u]"
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#35477d") if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: 1, .1
            pos_hint: {"top": .1, "right": 1}
            markup: True
            on_release:
                app.change_screen("home_screen", direction='left', mode='pop')



