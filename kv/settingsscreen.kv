
<SettingsScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#35477d")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#35477d")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            id: friend_id_label
            font_size: 20
            text: "My Friend ID: "
            size_hint: 1, .1
            pos_hint: {"top": 1, "left": 1}
        ImageButton:
            size_hint: .5, .2
            pos_hint: {"top": .8, "left": 1}
            source: "icons/avatars/man.png"
            on_release:
                app.change_screen("change_avatar_screen", direction = 'right', mode = 'push')
        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#35477d") if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: .3, .1
            pos_hint: {"top": .75, "right": .8}
            text: "[u]Change Avatar[/u]"
            markup: True
            on_release:
                app.change_screen("change_avatar_screen", direction = 'right', mode = 'push')
        ImageButton:
            size_hint: .5, .2
            pos_hint: {"top": .5, "left": 1}
            source: "icons/007-add-friend.png"
            on_release:
                app.change_screen("add_friend_screen", direction = 'right', mode='push')
        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#35477d") if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: .3, .1
            pos_hint: {"top": .45, "right": .8}
            text: "[u]Add A Friend[/u]"
            markup: True
            on_release:
                app.change_screen("add_friend_screen", direction = 'right', mode='push')
        LabelButton:
            text: "[u]Back[/u]"
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#35477d") if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: 1, .1
            pos_hint: {"top": .1, "right": 1}
            markup: True
            on_release:
                app.change_screen("home_screen", direction='left', mode='pop')



